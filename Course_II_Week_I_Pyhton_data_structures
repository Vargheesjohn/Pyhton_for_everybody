# string library - find function
apple = 'red color'
find_lor = apple.find('lor')
print(find_lor)
find_xyz = apple.find('xyz')
print(find_xyz)
#---------------------------------------------------------------------------------------------------------------------------------------
apple = 'red color'
replace_apple_orange = apple.replace('red', 'orange')
print(replace_apple)
replace_apple_o = apple.replace('o', 'r')
print(replace_apple_o)
